<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Businesses"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enunciado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Businesses"
        android:textSize="40sp"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enunciado">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabAutoescola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="Autoescuela" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabPeluqueria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peluqueria" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabGYM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GYM"

            />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout" />

</RelativeLayout>