                android:layout_toRightOf="@id/hoyvoyMap"
                android:text="Ubicació Hoy-Voy"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
