<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.autoescuela"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative1"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/liceuImagen"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/liceu" />

            <TextView
                android:id="@+id/liceutitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/liceuImagen"
                android:fontFamily="monospace"
                android:text="LICEU"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/liceuWeb"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_below="@+id/liceutitle"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/liceuImagen"
                android:fontFamily="monospace"
                android:src="@drawable/iconoweb"/>

            <TextView
                android:id="@+id/liceuWebString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/liceutitle"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/liceuWeb"
                android:text="Web Liceu"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/liceuTelef"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_below="@+id/liceuWeb"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/liceuImagen"
                android:fontFamily="monospace"
                android:src="@drawable/iconotelefono"/>

            <TextView
                android:id="@+id/liceuTelefString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/liceuWeb"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/liceuTelef"
                android:text="Telèfon Liceu"
                android:textColor="@android:color/white"
                android:textSize="12dp"/>

            <ImageView
                android:id="@+id/liceuMap"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_below="@+id/liceuTelef"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/liceuImagen"
                android:fontFamily="monospace"
                android:src="@drawable/iconoubicacion" />

            <TextView
                android:id="@+id/liceuMapString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/liceuTelef"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/liceuMap"
                android:text="Ubicació Liceu"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

        </RelativeLayout>
