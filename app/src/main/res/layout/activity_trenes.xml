<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trenes">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trens"
            android:id="@+id/titultrens"
            android:textSize="30dp"
            android:gravity="center" />
        <RelativeLayout
            android:id="@+id/granollersCentre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/titultrens"
            android:gravity="center"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horaris lineas Granollers Centre:"
                android:id="@+id/granollersCentreTitle"
                android:textSize="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/granollersCentreTitle">
                <ImageView
                    android:id="@+id/r2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/r2"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/r8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/r8"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/r11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/r11"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/granollersCanovelles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/granollersCentre"
            android:gravity="center"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horaris lineas Granollers Canovelles:"
                android:id="@+id/granollersCanovellesTitle"
                android:textSize="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/granollersCanovellesTitle">
                <ImageView
                    android:id="@+id/r3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/r3"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/granollersNord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/granollersCanovelles"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/granollersNordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Horaris lineas Granollers Nord (Les Franqueses):"
                android:textSize="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/granollersNordTitle">

                <ImageView
                    android:id="@+id/r2Nord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/r2nord"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>