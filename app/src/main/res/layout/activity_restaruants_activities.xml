<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaruants_activities"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:textAlignment="center"
        android:textSize="110px"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        >
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItaliano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italiano"
            android:icon="@drawable/ic_action_pizza"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabChino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asiatico"
            android:icon="@drawable/ic_action_chino"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabFastFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FASTFOOD"
            android:icon="@drawable/ic_action_burger"

            />
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>